extends layout

block content

	h1 Test your code

	form(action="/" method="POST")
		.panel.panel-default
			.panel-heading
				h3.panel-title Code
			.panel-body.text-right
				.form-group
					textarea.form-control(name="code" rows="10")= code
				button.btn.btn-success(type="submit") Try it!

	if stderr
		.panel.panel-danger
			.panel-heading
				h3.panel-title Error
			.panel-body
				pre= stderr

	if stdout
		.panel.panel-success
			.panel-heading
				h3.panel-title Result
			.panel-body
				pre= stdout

	if answer
		.panel.panel-success
			.panel-heading
				h3.panel-title Answer
			.panel-body
				!= answer


	h3.text-center
		a(href="http://mission.csgames.org/track/track_nit") Return to track

